<UserControl x:Class="Examine2DView.Controls.ContourLegendControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="120"
             MinWidth="100" MinHeight="200"
             Background="Transparent">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Padding="10" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" 
                           x:Name="TitleText"
                           Text="Von Mises Stress"
                           FontWeight="Bold"
                           FontSize="11"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                <!-- Combined Color Bar and Labels -->
                <Grid Grid.Row="1" MinHeight="200">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Color Bar Canvas -->
                    <Canvas Grid.Column="0" 
                            x:Name="ColorBarCanvas"
                            Width="40"
                            HorizontalAlignment="Left"/>

                    <!-- Labels Canvas for absolute positioning -->
                    <Canvas Grid.Column="1" 
                            x:Name="LabelsCanvas"
                            Width="60"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"/>
                </Grid>

                <!-- Units -->
                <TextBlock Grid.Row="2" 
                           x:Name="UnitsText"
                           Text="MPa"
                           FontSize="10"
                           Margin="0,10,0,5"
                           HorizontalAlignment="Center"/>
                
                <!-- Min/Max Values -->
                <StackPanel Grid.Row="3" 
                            Orientation="Vertical"
                            Margin="0,5,0,0">
                    <TextBlock x:Name="MaxValueText"
                               Text="Max: 52.4"
                               FontSize="9"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,2"/>
                    <TextBlock x:Name="MinValueText"
                               Text="Min: 9.5"
                               FontSize="9"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Resize Thumb (bottom-right corner) -->
        <Thumb x:Name="ResizeThumb"
               Width="10"
               Height="10"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Cursor="SizeNWSE"
               Opacity="0.5"
               DragDelta="ResizeThumb_DragDelta">
            <Thumb.Template>
                <ControlTemplate>
                    <Grid Background="Gray">
                        <Path Data="M 0,10 L 10,0" Stroke="White" StrokeThickness="1"/>
                        <Path Data="M 3,10 L 10,3" Stroke="White" StrokeThickness="1"/>
                        <Path Data="M 6,10 L 10,6" Stroke="White" StrokeThickness="1"/>
                    </Grid>
                </ControlTemplate>
            </Thumb.Template>
        </Thumb>
    </Grid>
</UserControl>
